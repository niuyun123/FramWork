<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <TextView
        android:id="@+id/tvcategory"
        android:text="科技文"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <TextView
          android:layout_marginTop="8dp"
          android:layout_below="@id/tvcategory"
          android:text="武大郎外传(武大郎拳打镇关西)"
          android:id="@+id/tvguider"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:layout_marginTop="8dp"
          android:layout_below="@id/tvguider"
          android:id="@+id/tv_title"
          android:textSize="16sp"
          android:text="西门庆大战潘金莲"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_title"
        android:id="@+id/tv_content"
        android:text="北京时间五月十五号在天安门广场上西门庆大战潘金莲"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvindex"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_content"
        android:text="评论"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_comment"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8dp"
        android:text="张三:666666666666666+\n李四:卧槽这么叼!!!!"
        android:layout_below="@id/tvindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>