<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"

      >
      <ImageView
          android:id="@+id/ivimg"
          android:src="@drawable/ic_suggest"
          android:layout_width="140dp"
          android:layout_height="116dp"
          android:layout_marginTop="20dp"
          android:layout_centerHorizontal="true"/>
      <TextView
          android:id="@+id/tvtitlesnomal"
          android:gravity="center"
          android:layout_below="@id/ivimg"
          android:layout_centerHorizontal="true"
          android:layout_width="168dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="此操作将让订单无法修改，请确定要结束订单"
          android:textColor="#FF4C4C4C"
          android:textSize="14sp"
          />
      <TextView
          android:visibility="gone"
          android:id="@+id/tvtitlebig"
          android:layout_below="@id/tvtitlesnomal"
          android:gravity="center"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="12dp"
          android:layout_width="168dp"
          android:layout_height="wrap_content"
          android:text="32000.08"
          android:textColor="#FFFF6668"
          android:textSize="20sp"
          />
      <TextView
          android:visibility="gone"
          android:id="@+id/tvtitlesmall"
          android:gravity="center"
          android:layout_below="@id/tvtitlebig"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="12dp"
          android:layout_width="168dp"
          android:layout_height="wrap_content"
          android:text="此操作将让订单无法修改，请确定要结束订单"
          android:textColor="#FF4C4C4C"
          android:textSize="12sp"
          />
      <LinearLayout
          android:layout_below="@id/tvtitlesmall"
          android:layout_centerHorizontal="true"
          android:layout_width="168dp"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/tvcancle"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dp"
              android:layout_weight="1"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:background="@drawable/bg_orange_roud"
              android:text="取消"
              android:gravity="center"
              android:textColor="#FFFFFFFF"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tvconfirm"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dp"
              android:layout_weight="1"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:gravity="center"
              android:background="@drawable/bg_red_round"
              android:text="确定"
              android:textColor="#FFFFFFFF"
              android:textSize="14sp" />
      </LinearLayout>

  </RelativeLayout>
</LinearLayout>